{
     "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
//     "height": 30,  // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 0, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": ["hyprland/workspaces","custom/crypto", "hyprland/window" ],
    "modules-center": ["group/group-sound"],
    //mpd vardƒ± burada
    "modules-right": [ "group/group-right", "custom/power"],
    // Modules configuration

    "hyprland/window": {
"format": "> {class}"
    },
    "custom/power":
    {
        "format": "‚èª ",
        "on-click": "wlogout"
    },

    "custom/playerctl": {
        "format": "::  <span>{}</span>",
        "return-type": "json",
        "max-length": 64,
        "exec": "playerctl -a metadata --format '{\"text\": \"{{artist}} - {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
        "on-click-middle": "playerctl play-pause",
        "on-click": "playerctl previous",
        "on-click-right": "playerctl next",
        "format-icons": {
          "Playing": "<span foreground='#B1B946'>Û∞ùö</span>",
          "Paused": "<span foreground='#47423E'>Û∞ùõ</span>"
        },
      },
  
      "group/group-sound": {
        "orientation": "inherit",
        "modules": [

            "pulseaudio/slider",
            "custom/playerctl"
        ]
    },

    "group/group-right":
    {"orientation": "inherit",
"modules":[

    "network",
    "bluetooth",
    "battery",
    "clock"
]
},

"custom/crypto": {
    "format": "{}",
    "interval": 500,
    "return-type": "json",
    "exec": "~/.config/waybar/modules/crypto/waybar_crypto.py",
    "exec-if": "ping pro-api.coinmarketcap.com -c1"
},

    "hyprland/workspaces": {
        "disable-scroll": false,
        "all-outputs": true,
        "on-scroll-up": "hyprctl dispatch workspace -1",
        "on-scroll-down": "hyprctl dispatch workspace +1",
          "format": "{icon}",
          "format-icons": {
            "1": "üåë",
            "2": "üåò",
            "3": "üåó",
            "4": "üåñ",
            "5": "üåï ",
              "6": "ÂÖ≠",
              "7": "‰∏É",
              "8": "ÂÖ´",
              "9": "‰πù",
            "10": "„Äá",
      //		"active": "ÔÜí",
      //		"default": "Û∞ßû"
          },
             "persistent-workspaces": {
                   "1":[],
                   "2":[],
                   "3":[],
                   "4":[],
                   "5":[]                              }
      },


        
    "hyprland/mode": {
        "format": "<span style=\"italic\">{}</span>"
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        }
    },
    "tray": {
        "icon-size": 21,
        "spacing": 10
    },
    "bluetooth": {
        "format-on": "Û∞ÇØ  |"  ,
      "format-off": "Û∞Ç≤",
      "format-connected": "Û∞Ç±  |",
      "format-disabled": "Û∞Ç≤",
      "on-click": "bash ~/.config/waybar/scripts/bluetoggle.sh",
      "on-click-right": "bash ~/.config/rofi/bluetooth/bluetooth.sh",
        // "format-device-preference": [ "device1", "device2" ], // preference list deciding the displayed device
        "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
        "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%"
    },

	"clock": {
        "timezone": "Asia/Istanbul",
		"format": "{:%A, %d %B %G | %H:%M:%OS}",
    "interval": 1,
		"tooltip": "false",
//        	"tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        	"format-alt": "{:%d/%m/%Y}",
  //  "on-click-right": "bash ~/.config/rofi/calendar/calendar.sh",
	},


    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-charging": "{capacity}% Ôóß",
        "format-plugged": "{capacity}% Ôá¶  |",
        "format-alt": "{time} {icon}",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },


    "network": {
        "format-wifi": "Û∞§®  ",
        "format-ethernet": "Ôõø {ifname}",
        "format-linked": "Ôõø {ifname} (No IP)",
        "format-disconnected": "Û∞§≠ ",
        "format-alt": "Ôõø {ifname}: {ipaddr}/{cidr}",
      "tooltip-format": "{essid}",
      "on-click-right": "python ~/.config/rofi/network/network.py",
},


    "pulseaudio": {

        "scroll-step": 5, // %, can be a float
        "format": "{icon}   {format_source}",
        "format-bluetooth": "{icon}Ôäî {format_source}",
        "format-bluetooth-muted": "{icon}Ôäî {format_source}",
        "format-muted": "{format_source}",
        "format-source": "ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol",
        "on-click-right": "pactl set-source-mute 0 toggle"
    }
}
